<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="%category.name"
            id="com.sevenwatt.picos.config.category">
      </category>
      <command
            name="%command.name"
            categoryId="com.sevenwatt.picos.config.category"
            id="com.sevenwatt.picos.config.commands.cfgCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.sevenwatt.picos.config.commands.cfgCommand"
            class="com.sevenwatt.picos.config.ConfigHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.newWizard"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+1">
         <parameter
               id="newWizardId"
               value="com.sevenwatt.picos.newPicos">
         </parameter>
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=file">
         <menu
               label="%menu.label"
               mnemonic="%menu.mnemonic"
               id="com.sevenwatt.picos.config.menus.picosMenu">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="%command.label"
                  style="push"
                  tooltip="%command.tooltip">
               <parameter
                     name="newWizardId"
                     value="com.sevenwatt.picos.newPicos">
               </parameter>
            </command>
            <separator
                  name="com.sevenwatt.picos.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="com.sevenwatt.picos.config.commands.cfgCommand"
                  mnemonic="%command.mnemonic"
                  id="com.sevenwatt.picos.config.menus.cfgCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:file?after=new">
         <command
               commandId="org.eclipse.ui.newWizard"
               label="%command.label.0"
               style="push"
               tooltip="%command.tooltip.0">
            <parameter
                  name="newWizardId"
                  value="com.sevenwatt.picos.newPicos">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:new?after=additions">
         <command
               commandId="org.eclipse.ui.newWizard"
               label="%command.label.1"
               style="push"
               tooltip="%command.tooltip.1">
            <parameter
                  name="newWizardId"
                  value="com.sevenwatt.picos.newPicos">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.sevenwatt.picos.wizards"
            name="%category.name.0">
      </category>
      <wizard
            category="com.sevenwatt.picos.wizards"
            class="com.sevenwatt.picos.wizards.PicosNewWizard"
            finalPerspective="org.eclipse.cdt.ui.CPerspective"
            id="com.sevenwatt.picos.newPicos"
            name="%wizard.name"
            preferredPerspectives="org.eclipse.cdt.ui.CPerspective"
            project="true">
      </wizard>
   </extension>

</plugin>
